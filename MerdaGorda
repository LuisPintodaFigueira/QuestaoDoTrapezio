 public static Scanner tecladoScanner = new Scanner(System.in);

    public static void main (String[] args) {
        int positivo = 0;
        int negativo = 0;
        int zero = 0;
        int numero = 0;
        String classNum = null;

        imprimir("digite um número inteiro");
        numero = lerValorInt(numero, positivo, negativo, zero);

        imprimir("o valor do número é" + classNum);
        classNum = null;
    }
    
    public static void imprimir (String saida) {
        System.out.println(saida);
    }

    public static int lerValorInt (int numero, int positivo, int negativo, int zero) {
        if (numero > 0) {
            numero = positivo;
        } else if (numero < 0) {
            numero = negativo;
        } else if (numero == 0) {
            numero = zero;
        }
        return numero;
    }

}
